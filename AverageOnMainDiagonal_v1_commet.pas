program DiagonalAverage;

var
  matrix: array[1..10, 1..10] of Integer;  { Матриця розміру 10x10 }
  n, i, j: Integer;  { Оголошення змінних для розміру матриці та індексів }
  sum: Integer;  { Змінна для збереження суми елементів головної діагоналі }
  average: Real;  { Змінна для збереження середнього арифметичного }

begin
  { Введення розміру матриці }
  Write('Введіть розмір матриці (n): ');  { Запит користувача на введення розміру матриці }
  ReadLn(n);  { Зчитування введеного значення розміру матриці в змінну n }

  { Введення елементів матриці }
  WriteLn('Введіть елементи матриці:');  { Виведення інструкцій для введення елементів матриці }
  for i := 1 to n do  { Цикл для проходу по всіх рядках матриці }
    for j := 1 to n do  { Цикл для проходу по всіх стовпцях матриці }
    begin
      Write('matrix[', i, ',', j, ']: ');  { Виведення запиту для кожного елемента матриці }
      ReadLn(matrix[i, j]);  { Зчитування значення елемента матриці для заданих індексів i та j }
    end;

  { Обчислення суми елементів головної діагоналі }
  sum := 0;  { Ініціалізація змінної для суми елементів головної діагоналі }
  for i := 1 to n do  { Цикл для проходу по головній діагоналі матриці }
    sum := sum + matrix[i, i];  { Додавання елемента головної діагоналі до суми }

  { Обчислення середнього арифметичного }
  average := sum / n;  { Обчислення середнього арифметичного елементів головної діагоналі }

  { Виведення результату }
  WriteLn('Середнє арифметичне елементів головної діагоналі: ', average:0:2);  { Виведення середнього арифметичного з точністю до 2 знаків після коми }
end.
